
.message
  .upper-info
    .upper-info__user 
      %p= message.user.name
    .upper-info__date 
      %p= message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    .lower-message__text
      - if message.text.present?
        %p=message.text
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?